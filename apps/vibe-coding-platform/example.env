# Environment variables for Vibe Coding Platform
# Sources: ai/gateway.ts (OPENAI_BASE_URL, OPENAI_API_KEY), ai/constants.ts (NEXT_PUBLIC_OPENAI_DEFAULT_MODEL), app/actions.ts (reads NODE_ENV)

# Required: OpenAI API key for server-side requests
# Get from https://platform.openai.com/ or your compatible provider
OPENAI_API_KEY=your-openai-api-key

# Optional: Custom base URL for OpenAI-compatible endpoint (proxy/self-host)
# Example: http://localhost:8080/v1
OPENAI_BASE_URL=https://api.openai.com/v1

# Public: default model for UI (exposed to the browser)
# You can change this to any available model ID
NEXT_PUBLIC_OPENAI_DEFAULT_MODEL=gpt-5

# E2B SDK â€” cloud sandbox configuration
# The SDK auto-reads these from env (see node_modules/e2b/dist/index.js:378-389)
# Required for creating/running E2B sandboxes via @e2b/code-interpreter
# Team API key (recommended for shared projects)
E2B_API_KEY=e2b_***

# Optional: personal access token (alternative auth for personal actions)
# If set, the SDK can use this instead of E2B_API_KEY
#E2B_ACCESS_TOKEN=

# Optional: custom domain (defaults to e2b.app)
#E2B_DOMAIN=e2b.app

# Optional: debug mode (if true, SDK uses http://localhost:3000 and verbose logs)
#E2B_DEBUG=false